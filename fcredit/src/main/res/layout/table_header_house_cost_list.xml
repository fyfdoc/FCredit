<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    >

    <!--操作-->
    <com.fcredit.widget.table.TableCellTextView
        android:id="@+id/list_opt"
        android:layout_width="50dp"
        android:layout_height="@dimen/table_line_height"
        android:layout_alignBottom="@+id/list_opt_item"
        android:layout_alignTop="@+id/list_opt_item"
        android:gravity="center"
        android:textColor="#000"
        android:textSize="13sp" />

    <!--合计操作-->
    <com.fcredit.widget.table.TableCellTextView
        android:id="@+id/list_opt_item"
        android:layout_width="80dp"
        android:layout_height="@dimen/table_line_height"
        android:layout_toRightOf="@+id/list_opt"
        android:gravity="center"
        android:textColor="#000"
        android:textSize="13sp" />

    <!--序号-->
    <com.fcredit.widget.table.TableCellTextView
        android:id="@+id/list_no"
        android:layout_width="50dp"
        android:layout_height="@dimen/table_line_height"
        android:layout_alignBottom="@+id/list_opt_item"
        android:layout_alignTop="@+id/list_opt_item"
        android:layout_toRightOf="@+id/list_opt_item"
        android:gravity="center"
        android:textColor="#000"
        android:textSize="13sp" />

    <!--房屋名称-->
    <com.fcredit.widget.table.TableCellTextView
        android:id="@+id/list_house_name"
        android:layout_width="150dp"
        android:layout_height="@dimen/table_line_height"
        android:layout_alignBottom="@+id/list_no"
        android:layout_alignTop="@+id/list_no"
        android:layout_toRightOf="@+id/list_no"
        android:gravity="center"
        android:textColor="#000"
        android:textSize="13sp" />

    <!--交易日期-->
    <com.fcredit.widget.table.TableCellTextView
        android:id="@+id/list_trade_date"
        android:layout_width="80dp"
        android:layout_height="@dimen/table_line_height"
        android:layout_alignBottom="@+id/list_house_name"
        android:layout_alignTop="@+id/list_house_name"
        android:layout_toRightOf="@+id/list_house_name"
        android:gravity="center"
        android:textColor="#000"
        android:textSize="13sp" />

    <!--贷款总额-->
    <com.fcredit.widget.table.TableCellTextView
        android:id="@+id/list_credit_limit"
        android:layout_width="90dp"
        android:layout_height="@dimen/table_line_height"
        android:layout_alignBottom="@+id/list_trade_date"
        android:layout_alignTop="@+id/list_trade_date"
        android:layout_toRightOf="@+id/list_trade_date"
        android:gravity="center"
        android:textColor="#000"
        android:textSize="13sp" />

    <!--成本合计(元)-->
    <com.fcredit.widget.table.TableCellTextView
        android:id="@+id/list_cost_sum"
        android:layout_width="90dp"
        android:layout_height="@dimen/table_line_height"
        android:layout_alignBottom="@+id/list_credit_limit"
        android:layout_alignTop="@+id/list_credit_limit"
        android:layout_toRightOf="@+id/list_credit_limit"
        android:gravity="center"
        android:textColor="#000"
        android:textSize="13sp" />

    <!--备注-->
    <com.fcredit.widget.table.TableCellTextView
        android:id="@+id/list_comment"
        android:layout_width="150dp"
        android:layout_height="@dimen/table_line_height"
        android:layout_alignBottom="@+id/list_cost_sum"
        android:layout_alignTop="@+id/list_cost_sum"
        android:layout_toRightOf="@+id/list_cost_sum"
        android:gravity="center"
        android:textColor="#000"
        android:textSize="13sp" />

    <!--id hidden-->
    <com.fcredit.widget.table.TableCellTextView
        android:id="@+id/list_id"
        android:layout_width="0dp"
        android:layout_height="@dimen/table_line_height"
        android:layout_alignBottom="@+id/list_comment"
        android:layout_alignTop="@+id/list_comment"
        android:layout_toRightOf="@+id/list_comment"
        android:gravity="center"
        android:textColor="#000"
        android:textSize="13sp" />

</RelativeLayout>